@model CarRentalManagement.Models.ViewModel.Auth.LoginViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">Đăng nhập</div>
                <div class="panel-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="ReturnUrl"/>
                        <div class="well well-sm text-danger">@TempData["Message"]</div>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </fieldset>

                        <fieldset class="form-floating mb-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <input type="checkbox" asp-for="RememberMe" class="checkbox-inline"/>
                            <label asp-for="RememberMe" class="control-label"></label>
                        </fieldset>
                        <a class="text-danger" asp-action="ResetPassword">Quên mật khẩu</a>
                        <div style="float: right">
                            <button class="btn btn-default" type="button" id="cancel">Huỷ</button>
                            <button class="btn btn-primary" type="submit">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}