@using CarRentalManagement.Services
@model CarRentalManagement.Models.ViewModel.DamagesManagement.AddDamagesViewModel
@inject IContractService ContractService
@{
    ViewBag.Title = "Khai báo sửa chữa - thay thế phụ tùng";
    Layout = "_Layout";
    
    var contractSelectList = await ContractService.ListAsync<SelectListItem>().ConfigureAwait(false);
}
<div class="container-fluid mr-top-20">
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            <form asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="well well-sm text-danger">@TempData["Message"]</div>
                <input type="hidden" asp-for="ReturnUrl"/>
                <input type="hidden" asp-for="CreatedBy"/>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="ContractId" class="control-label"></label>
                    <select asp-items="contractSelectList" asp-for="ContractId" class="form-control chosen"></select>
                    <span asp-validation-for="ContractId" class="text-danger"></span>
                </fieldset>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </fieldset>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="TotalRepairCost" class="control-label"></label>
                    <input asp-for="TotalRepairCost" class="form-control"/>
                    <span asp-validation-for="TotalRepairCost" class="text-danger"></span>
                </fieldset>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="DamagedAt" class="control-label"></label>
                    <input asp-for="DamagedAt" class="form-control"/>
                    <span asp-validation-for="DamagedAt" class="text-danger"></span>
                </fieldset>
                
                <div style="float: right">
                    <a class="btn btn-default" id="cancel">Huỷ</a>
                    <button class="btn btn-primary" type="submit">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>