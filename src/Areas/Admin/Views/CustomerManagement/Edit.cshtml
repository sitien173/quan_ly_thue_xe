@using CarRentalManagement.Extensions
@model CarRentalManagement.Models.ViewModel.CustomerManagement.EditCustomerViewModel
@{
    ViewBag.Title = "Chỉnh sửa thông tin khách hàng";
    Layout = "_Layout";
}
<div class="container-fluid mr-top-20">
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="well well-sm text-danger">@TempData["Message"]</div>
                <input asp-for="ReturnUrl"/>
                <input asp-for="Id"/>

                <div class="row">
                    <div class="col-md-6">
                        <fieldset class="mb-3 baguetteBox">
                            <input asp-for="Avatar" class="form-control">
                            <input asp-for="AvatarThumb" class="form-control">
                            <a href="@Url.Content("~")@Html.DisplayFor(x => x.Avatar)">
                                <img src="@Html.DisplayFor(x => x.AvatarThumb)"/>
                            </a>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="BirthDate" class="control-label"></label>
                            <input asp-for="BirthDate" class="form-control">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="Domicile" class="control-label"></label>
                            <input asp-for="Domicile" class="form-control">
                            <span asp-validation-for="Domicile" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="TempAccommodation" class="control-label"></label>
                            <input asp-for="TempAccommodation" class="form-control">
                            <span asp-validation-for="TempAccommodation" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="CurrentAddress" class="control-label"></label>
                            <input asp-for="CurrentAddress" class="form-control">
                            <span asp-validation-for="CurrentAddress" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="Profession" class="control-label"></label>
                            <input asp-for="Profession" class="form-control">
                            <span asp-validation-for="Profession" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="WorkPlace" class="control-label"></label>
                            <input asp-for="WorkPlace" class="form-control">
                            <span asp-validation-for="WorkPlace" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset class="form-floating mb-3">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="IsVerify" class="control-label"></label>
                            <input asp-for="IsVerify" class="checkbox">
                            <span asp-validation-for="IsVerify" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="IsLocked" class="control-label"></label>
                            <input asp-for="IsLocked" class="checkbox">
                            <span asp-validation-for="IsLocked" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="CreatedAt" class="control-label"></label>
                            <input asp-for="CreatedAt" class="form-control">
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="SexEnum" class="control-label"></label>
                            <select asp-for="SexEnum" asp-items="SexEnum.Male.ToSelectList()" class="form-control chosen"></select>
                            <span asp-validation-for="SexEnum" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="IDCard" class="control-label"></label>
                            <input asp-for="IDCard" class="form-control">
                            <span asp-validation-for="IDCard" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="DateOfIssue" class="control-label"></label>
                            <input asp-for="DateOfIssue" class="form-control">
                            <span asp-validation-for="DateOfIssue" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="PlaceOfIssue" class="control-label"></label>
                            <input asp-for="PlaceOfIssue" class="form-control">
                            <span asp-validation-for="PlaceOfIssue" class="text-danger"></span>
                        </fieldset>
                        <fieldset class="form-floating mb-3">
                            <label asp-for="ExpirationDate" class="control-label"></label>
                            <input asp-for="ExpirationDate" class="form-control">
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </fieldset>
                        <div class="row baguetteBox">
                            <div class="col-md-6">
                                <fieldset class="mb-3">
                                    <label asp-for="FrontalPhoto" class="control-label"></label>
                                    <a href="@Url.Content("~")@Model.FrontalPhoto">
                                        <img src="@Model.FrontalPhotoThumb" width="100%"/>
                                    </a>
                                    <input asp-for="FrontalPhoto" class="form-control">
                                    <input asp-for="FrontalPhotoThumb" class="form-control">
                                </fieldset>
                            </div>
                            <div class="col-md-6">
                                <fieldset class="mb-3">
                                    <label asp-for="RearPhoto" class="control-label"></label>
                                    <a href="@Url.Content("~")@Model.RearPhoto">
                                        <img src="@Model.RearPhotoThumb" width="100%"/>
                                    </a>
                                    <input asp-for="RearPhoto" class="form-control">
                                    <input asp-for="RearPhotoThumb" class="form-control">
                                </fieldset>
                            </div>
                        </div>
                    </div>

                </div>

                <div style="float: right">
                    <a class="btn btn-default" id="cancel">Huỷ</a>
                    <button class="btn btn-primary" type="submit">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>