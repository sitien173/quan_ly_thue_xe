@using CarRentalManagement.Services
@model CarRentalManagement.Models.ViewModel.InvoiceManagement.AddInvoiceViewModel
@inject IContractService ContractService
@{
    ViewBag.Title = "Thêm hoá đơn";
    Layout = "_Layout";

    var contractSelectListItems = await ContractService.ListAsync<SelectListItem>();
}
<div class="container-fluid mr-top-20">
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            <form asp-action="Add" method="post">
                <input asp-for="ReturnUrl">
                <input asp-for="CreatedBy">
                <input asp-for="CreatedAt">

                <fieldset class="form-floating mb-3">
                    <label asp-for="ContractId" class="control-label required"></label>
                    <select asp-for="ContractId" asp-items="contractSelectListItems" required class="form-control chosen">
                    </select>
                </fieldset>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </fieldset>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" class="form-control"/>
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </fieldset>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="Vat" class="control-label"></label>
                    <input asp-for="Vat" class="form-control"/>
                    <span asp-validation-for="Vat" class="text-danger"></span>
                </fieldset>
                
                <fieldset class="form-floating mb-3">
                    <label asp-for="TotalPriceWithVat" class="control-label"></label>
                    <input asp-for="TotalPriceWithVat" class="form-control"/>
                    <span asp-validation-for="TotalPriceWithVat" class="text-danger"></span>
                </fieldset>

                <fieldset class="form-floating mb-3">
                    <label asp-for="Money" class="control-label"></label>
                    <input asp-for="Money" class="form-control"/>
                    <span asp-validation-for="Money" class="text-danger"></span>
                </fieldset>
                
                <div class="text-right">
                    <a class="btn btn-default" id="cancel">Huỷ</a>
                    <button class="btn btn-primary" type="submit">Xuất hoá đơn</button>
                </div>
            </form>
        </div>
    </div>
</div>
