@using CarRentalManagement.Extensions
@model CarRentalManagement.Models.ViewModel.EmployeeManagement.EditEmployeeViewModel
@{
    ViewBag.Title = "Chỉnh sửa thông tin nhân viên";
    Layout = "_Layout";
}
<div class="container-fluid mr-top-20">
    <div class="panel panel-primary">
        <div class="panel-heading">@ViewBag.Title</div>
        <div class="panel-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="well well-sm text-danger">@TempData["Message"]</div>
                <input asp-for="ReturnUrl"/>
                <input asp-for="Id"/>
                <fieldset class="form-floating mb-3">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </fieldset>
                <fieldset class="form-floating mb-3">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </fieldset>
                <fieldset class="form-floating mb-3">
                    <label asp-for="SexEnum" class="control-label"></label>
                    <select asp-for="SexEnum" asp-items="SexEnum.Male.ToSelectList()" class="form-control chosen"></select>
                    <span asp-validation-for="SexEnum" class="text-danger"></span>
                </fieldset>
                <fieldset class="form-floating mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </fieldset>
                <fieldset class="form-floating mb-3">
                    <label asp-for="BirthDate" class="control-label"></label>
                    <input asp-for="BirthDate" class="form-control">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </fieldset>
                <fieldset class="form-floating mb-3">
                    <label asp-for="RoleEnum" class="control-label"></label>
                    <select asp-for="RoleEnum" asp-items="RoleEnum.PA.ToSelectList()" class="form-control chosen"></select>
                    <span asp-validation-for="RoleEnum" class="text-danger"></span>
                </fieldset>
                <div style="float: right">
                    <a class="btn btn-default" id="cancel">Huỷ</a>
                    <button class="btn btn-primary" type="submit">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>